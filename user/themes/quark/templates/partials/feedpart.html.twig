{% for post in page.collection %}
{% set image = post.media.images|first %}

<div class="column col-3 col-sm-12">
    <div class="card news-card">
    {% if image %}
    <div class="card-image">
        {{ image.html }}
    </div>
    {% endif %}
    <div class="card-header">
        <a href="{{ post.url }}">
            <div class="card-title h5 text-dark">{{ post.title }}</div>
        </a>
        <div class="card-subtitle text-gray">{{ post.date|date(system.pages.dateformat.short) }}</div>
    </div>
    <div class="card-body">
        <div class="overflow-container">
            <p>{{ post.summary }}</p>
        </div>
        <div><a>Read more...</a></div>
    </div>
    </div>
</div>
{% endfor %}